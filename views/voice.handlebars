<div class="container voice-container">
    <form>
         <div class="form-group row">
            <label for="input-number" class="col-sm-2 col-form-label">Phone Number:</label>
            <div class="col-sm-10">
                <input type="tel" class="form-control" id="input-number-voice" placeholder="Number">
            </div>
        </div>
        <div class="form-group row">
            <label for="input-text" class="col-sm-2 col-form-label" rows="3">Say:</label>
            <div class="col-sm-10">
                <textarea type="text" class="form-control" id="input-text-voice" placeholder="What would you like to say"></textarea>
            </div>
        </div>
           <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary btn-voice-send">Send</button>
            </div>
        </div>
    </form>

</div>